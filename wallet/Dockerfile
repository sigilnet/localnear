FROM nguquen/near-wallet:latest

ARG ACCESS_KEY_FUNDING_AMOUNT
ARG ACCOUNT_ID_SUFFIX
ARG NETWORK_ID
ARG IS_MAINNET
ARG NODE_URL
ARG EXPLORER_URL
ARG ACCOUNT_HELPER_URL
ARG INDEXER_SERVICE_URL

COPY ./env.sh /root/env.sh
RUN chmod +x /root/env.sh
RUN /root/env.sh ACCESS_KEY_FUNDING_AMOUNT $ACCESS_KEY_FUNDING_AMOUNT
RUN /root/env.sh ACCOUNT_ID_SUFFIX $ACCOUNT_ID_SUFFIX
RUN /root/env.sh NETWORK_ID $NETWORK_ID
RUN /root/env.sh IS_MAINNET $IS_MAINNET
RUN /root/env.sh NODE_URL $NODE_URL
RUN /root/env.sh EXPLORER_URL $EXPLORER_URL
RUN /root/env.sh ACCOUNT_HELPER_URL $ACCOUNT_HELPER_URL
RUN /root/env.sh INDEXER_SERVICE_URL $INDEXER_SERVICE_URL
